<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Fill with a light color (white or off-white works well with mild orange) -->
    <solid android:color="#FFFFFF" />

    <!-- Optional: add a border for definition -->
    <stroke
        android:width="1dp"
        android:color="#B0B0B0" />

    <!-- Rounded corners -->
    <corners android:radius="8dp" />

    <!-- Optional: internal padding -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />
</shape>
