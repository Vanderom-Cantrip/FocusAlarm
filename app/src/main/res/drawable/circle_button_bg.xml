<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- White fill for the circle -->
    <solid android:color="#FFFFFF" />

    <!-- Optional black stroke for a clear outline -->
    <stroke
        android:width="2dp"
        android:color="#000000" />

    <!-- Control overall circle size (e.g. 64dp diameter) -->
    <size
        android:width="64dp"
        android:height="64dp" />
</shape>
