<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF0000">

    <TextView
        android:id="@+id/alarmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="ALARM!"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/snoozeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:drawableLeft="@drawable/ic_snooze_24" android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Snooze"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/acknowledgeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/acknowledgeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:drawableLeft="@drawable/ic_acknowledge_24" android:drawablePadding="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="Acknowledge"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_bottom_anchor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom_anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" /> <ImageButton
    android:id="@+id/cancel_icon_button"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_marginStart="24dp"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:contentDescription="Cancel Alarm (Drag)"
    android:padding="8dp"
    android:scaleType="fitCenter"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@+id/guideline_bottom_anchor"
    app:srcCompat="@drawable/ic_cancel_24" /> <TextView
    android:id="@+id/cancel_text_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="Cancel Alarm"
    android:textColor="#FFFFFF"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="@id/cancel_icon_button"
    app:layout_constraintStart_toEndOf="@id/cancel_icon_button"
    app:layout_constraintTop_toTopOf="@id/cancel_icon_button" />

    <ImageButton
        android:id="@+id/remove_icon_button"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Remove Alarm (Drag)"
        android:padding="8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline_bottom_anchor"
        app:srcCompat="@drawable/ic_delete_24" /> <TextView
    android:id="@+id/remove_text_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:text="Remove Alarm"
    android:textColor="#FFFFFF"
    android:textSize="16sp"
    app:layout_constraintBottom_toBottomOf="@id/remove_icon_button"
    app:layout_constraintEnd_toStartOf="@id/remove_icon_button"
    app:layout_constraintTop_toTopOf="@id/remove_icon_button" />

</androidx.constraintlayout.widget.ConstraintLayout>