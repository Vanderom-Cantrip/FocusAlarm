<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarm_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCC80"
    android:padding="24dp">

    <TextView
        android:id="@+id/alarmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/alarm_title"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/alarmInfoTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Alarm Information Will Appear Here"
        android:textSize="18sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/alarmText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/ackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_button_bg"
        android:contentDescription="@string/acknowledge"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_acknowledge_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmInfoTextView" />

    <TextView
        android:id="@+id/ackLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acknowledge"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/ackButton"
        app:layout_constraintStart_toStartOf="@+id/ackButton"
        app:layout_constraintEnd_toEndOf="@+id/ackButton" />

    <TextView
        android:id="@+id/ackConfirmationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="#000000"
        android:textSize="14sp"
        android:text="Notifications silenced until next urgency stage. You may still use Cancel or Remove for this alarm."
        app:layout_constraintTop_toBottomOf="@+id/ackLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/killButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="212dp"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_button_bg"
        android:contentDescription="@string/cancel_alarm"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_cancel_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@android:color/black" />

    <TextView
        android:id="@+id/killLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/cancel_alarm"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/killButton"
        app:layout_constraintStart_toStartOf="@+id/killButton"
        app:layout_constraintEnd_toEndOf="@+id/killButton" />

    <ImageButton
        android:id="@+id/extraKillButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="220dp"
        android:layout_marginBottom="28dp"
        android:adjustViewBounds="true"
        android:background="@drawable/circle_button_bg"
        android:contentDescription="@string/remove_alarm"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_delete_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/black" />

    <TextView
        android:id="@+id/extraKillLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/remove_alarm"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/extraKillButton"
        app:layout_constraintStart_toStartOf="@+id/extraKillButton"
        app:layout_constraintEnd_toEndOf="@+id/extraKillButton" />

    <!-- Post-action Buttons -->
    <LinearLayout
        android:id="@+id/actionButtonsLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/buttonUndo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Undo" />

        <Button
            android:id="@+id/buttonOk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK" />

        <Button
            android:id="@+id/buttonKeepFuture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Keep Future Alarms"
            android:visibility="gone" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>